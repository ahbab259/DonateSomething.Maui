<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DonateSomething.Maui.Views.OrganizationDetails"
             xmlns:vm="clr-namespace:DonateSomething.Maui.ViewModels"
             Title="{Binding Title}"
             x:DataType="vm:OrganizationDetailsViewModel">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Org.Name}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>